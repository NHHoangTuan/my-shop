<Page x:Class="MyShop.Views.ManageProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyShop.Views"
      xmlns:local1="clr-namespace:MyShop.Converter"
      xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="1030"
      Title="ManageProducts">

    <Page.Resources>
        <local1:RelativeToAbsoluteConverter x:Key="absoluteConverter"/>
    </Page.Resources>

    <Border Background="LightSalmon" CornerRadius="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="962*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="58"/>
            </Grid.RowDefinitions>


            <!--Category list view-->
            <ListView x:Name="categoriesListView" Margin="0 10 0 10" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" SelectionChanged="categoriesListView_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Visible" Style="{DynamicResource MaterialDesignListView}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <MaterialDesign:Chip
  Content="iPhone">
                            <MaterialDesign:Chip.Icon>
                                <Image
      Source="/Asset/Images/Design/iphone13.jpg" />
                            </MaterialDesign:Chip.Icon>
                        </MaterialDesign:Chip>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <!--Hiển thị nếu không có sản phẩm nào được tìm thấy-->
            <TextBlock 
             Foreground="#353935"
             FontWeight="Medium" 
             HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="MessageText" 
            Grid.Row="2" Grid.Column="1" 
            d:Text="Opps! Không tìm thấy bất kì sản phẩm nào"/>
            
            
            <!--Hien thi danh sach san pham-->
            <Border Grid.Row="2" Background="#60ffffff" Grid.Column="1" CornerRadius="15">
                <Grid Margin="20">

                    <Frame >

                    </Frame>

                    <!--Hiển thị những sản phẩm-->
                    <ListView 
        
        Name="phoneListView"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        HorizontalAlignment="Left"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        BorderThickness="0"
        Margin="50, 0, 0, 0"
        Background="Transparent"
        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid 
                Name="ProductItem"
                Width="200"
                Margin="0, 0, 0, 0"
                Height="140">

                                    <Button Name="ItemButton"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Width="155"
                    Margin="10"
                    Height="83"
                    BorderThickness="0.5"
                    BorderBrush="Orange"
                    Padding="12, 8,8,8"
                    IsEnabled="False"
                    Style="{StaticResource MyButtonStyle}"
                    >
                                        <StackPanel VerticalAlignment="Center"
                                Width="130"
                                HorizontalAlignment="Left">

                                            <StackPanel Orientation="Horizontal">


                                                <!-- binding -->
                                                <TextBlock Name="CatName"
                                       Text="{Binding CatName}"
                                       />
                                            </StackPanel>

                                            <!-- binding -->
                                            <TextBlock Name="ProName"
                                   Text="{Binding ProName}"
                                   TextWrapping="Wrap"
                                   Margin="0, 2, 0, 2"
                                   Foreground="#353935"
                                   FontWeight="Bold"
                                   />

                                            <!-- binding -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Name="priceTextBlock"
                                   Text="{Binding PromotionPrice}"
                                   FontWeight="Bold"
                                   Foreground="#8B4000"/>
                                                <Border
                                HorizontalAlignment="Right"
                                Name="PromotionBorder"
                                Background="#30FF5733"
                                CornerRadius="5"
                                Margin="10, 0,0,0"
                                Height="15"
                                Width="36"
                              >
                                                    <TextBlock
                                Name ="PromotionTextBlock"
                                Foreground="DarkRed"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding DiscountPercent}">
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>

                                        </StackPanel>
                                    </Button>

                                    <Image Width="75"
                       Height="125"
                       Cursor="Hand"
                       VerticalAlignment="Top"
                       Margin="0, 0, 10, 0"
                       HorizontalAlignment="Right"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Source="{Binding ProImage, Converter={StaticResource absoluteConverter}}"
                       >
                                        <Image.Effect>
                                            <DropShadowEffect BlurRadius="35"
                          ShadowDepth="5"
                          Opacity="0.4"
                          Direction="-90"
                          Color="#8B4000"/>
                                        </Image.Effect>
                                    </Image>
                                    <!--Background="#FF7F50"-->
                                </Grid>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <EventSetter Event="MouseDoubleClick"
                         Handler="ListViewItem_MouseDoubleClick"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Border>
            

            <!--Hiển thị thanh search-->
            <Border BorderThickness="0.5" BorderBrush="Orange" CornerRadius="18"
          Grid.Column="1" Background="White" 
         HorizontalAlignment="Left"
         Height="35"
         Width="500"
         Margin="20, 0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Icon:PackIconMaterial Width="20" Height="20" Kind="Magnify" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Grid Grid.Column="1"
                Width="420"
               Margin="0"
               HorizontalAlignment="Left">
                        <TextBox 
                 BorderThickness="0"
                 VerticalContentAlignment="Center"
                 FontSize="13"
                 Width="420"
                 x:Name="SearchTermTextBox"
                >
                        </TextBox>
                        <TextBlock IsHitTestVisible="False" Text="Search . . ." 
                        VerticalAlignment="Center"
                        FontSize="13"
                        HorizontalAlignment="Left" Margin="5,0,0,0"
                        Foreground="DarkGray">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>

            <!--Hiển thị Filter (Sort by giá :))-->

            <StackPanel Orientation="Horizontal"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Margin="0,0, 30, 0">
                <Border
        Height="35"
        Width="140"
        Margin="10,0,0,0"
        BorderThickness="0.5" BorderBrush="Orange" CornerRadius="18"
         Background="WhiteSmoke" 
    >
                    <ComboBox 
        Name="PriceCombobox"
        BorderThickness="0" BorderBrush="Transparent" Width="110"
        VerticalContentAlignment="Center"
        >
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">

                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBoxItem IsHitTestVisible="False" IsEnabled="False" IsSelected="True" >Sort: Price</ComboBoxItem>
                        <ComboBoxItem>Less than 5 million</ComboBoxItem>
                        <ComboBoxItem>From 5 to 10 million</ComboBoxItem>
                        <ComboBoxItem>From 10 to 15 million</ComboBoxItem>
                        <ComboBoxItem>More than 15 million</ComboBoxItem>
                        <ComboBoxItem >All</ComboBoxItem>
                    </ComboBox>
                </Border>
                <Button
        Name="AddProduct"
        Grid.Row="2"
        Margin="10,0,0,0"
        Width="35"
        Height="35"
        Style="{StaticResource MyButtonStyle}"
        BorderThickness="0.5"
        BorderBrush="Orange"
        HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Width="16" Height="16" Kind="Plus"/>
                </Button>
            </StackPanel>


            <!-- Hiển thị phân trang -->
            <Border BorderThickness="0.5" BorderBrush="Orange" CornerRadius="15"
Background="White" 
HorizontalAlignment="Right"
            Margin="0 0 20 0"
Height="30"
Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
Width="180">

                <Grid Width="150">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button
    Name="FirstButton" Style="{StaticResource MyTransButton}"
    Background="Transparent"
    BorderThickness="0"
    
                >
                        <Image Source="/Assets/Images/Design/first_icon.png" Width="15" Height="15"/>
                    </Button>
                    <Button
    Name="PrevButton" Style="{StaticResource MyTransButton}"
    Grid.Column="1"
    Background="Transparent"
    BorderThickness="0"
   >
                        <Image Source="/Assets/Images/Design/prev_icon.png" Width="15" Height="15"/>
                    </Button>

                    <TextBlock 
    Name="pageInfoTextBlock"
    Grid.Column="2"
    Text = "1/3" 
    FontSize="13"
    VerticalAlignment="Center"
    HorizontalAlignment="Center"
    Foreground="#353935"
    FontWeight="Medium"
/>

                    <Button
    Name="NextButton" Style="{StaticResource MyTransButton}"
    Grid.Column="3"
    Background="Transparent"
    BorderThickness="0"
   >
                        <Image Source="/Assets/Images/Design/next_icon.png" Width="15" Height="15"/>
                    </Button>

                    <Button 
    Name="LastButton" Style="{StaticResource MyTransButton}"
    Grid.Column="4"
    Background="Transparent"
    BorderThickness="0"
    >
                        <Image Source="/Assets/Images/Design/last_icon.png" Width="15" Height="15"/>
                    </Button>
                </Grid>
            </Border>


        </Grid>
    </Border>
</Page>
